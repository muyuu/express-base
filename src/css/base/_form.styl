
input, textarea
  box-sizing: border-box

input[type=text],
input[type=password],
input[type=tel],
input[type=email],
input[type=number]
  padding: 3px
  border: 1px solid $gray
  box-shadow: none

select
  width: 100%
  padding: 5px
  border-radius: 4px
  height: 46px
  border: 2px solid #999999


