// リンクリスト用の→矢印
linkListArrow( $size = 10px, $right = 10px, $border-size = 2px, $color = #333)
  &:after
    position absolute
    content ""
    display inline-block
    right $right
    top 50%
    width $size
    height $size
    margin-top -0.5em
    border-top $border-size solid $color
    border-right $border-size solid $color
    -webkit-transform rotate(45deg)
    transform rotate(45deg)



// ---------------------------------------------------------
// exchange font size to "rem"
// ---------------------------------------------------------
font-size($fontValue = $baseFontSize, $baseFontValue = $baseFontSize)
  font-size $fontValue px
  font-size ($fontValue / $baseFontValue) rem

