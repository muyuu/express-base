// ---------------------------------------------------------
// transition
// ---------------------------------------------------------
transition( $pro, $sec, $delay, $func )
  -webkit-transition $pro $sec $delay $func
  transition $pro $sec $delay $func


// ---------------------------------------------------------
// box-sizing
// ---------------------------------------------------------
box-sizing( $val )
  -moz-box-sizing $val
  -ms-box-sizing $val
  box-sizing $val


// ---------------------------------------------------------
// box-shadow
// ---------------------------------------------------------
boxShadow( $off-y, $off-x, $blur, $color)
  box-shadow $off-y $off-x $blur $color

  @if $support-ie8
    -ms-filter unquote('"progid:DXImageTransform.Microsoft.Shadow(color=' + $color + ',direction=135,strength=2,enabled=true)"')


// ---------------------------------------------------------
// text-border
// ---------------------------------------------------------
text-border( $color, $width = 1px, $blur = 0px)
  text-shadow $color $width $width $blur, $color (-$width) $width $blur, $color $width  (-$width) $blur, $color  (-$width)  (-$width) $blur


// ---------------------------------------------------------
// opacity
// ---------------------------------------------------------
opacity( $num )
  $ieNum = $num * 100
  opacity $num
  if $support-ie8
    -ms-filter unquote('"alpha( opacity="' + $ieNum + '" )"')
    zoom 1
  if $support-ie6 || $support-ie7
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')


